with recursive levels(employeeid,level)
as
(
select a.employeeid, 1 as level
from myemployees a
inner join 
myemployees b 
on a.employeeid=b.managerid
where a.managerid is null
  
union all
  
select b.employeeid , level + 1
  from 
  levels a
  inner join 
  myemployees b 
  on b.managerid = a.employeeid
  ) 
  select * from levels
