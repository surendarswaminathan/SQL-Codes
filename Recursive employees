CREATE TABLE MyEmployees
(
	EmployeeID integer NOT NULL,
	FirstName varchar(30)  NOT NULL,
	LastName  varchar(40) NOT NULL,
	Title varchar(50) NOT NULL,
	DeptID integer NOT NULL,
	ManagerID integer NULL
);
